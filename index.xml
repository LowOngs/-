<?xml version="1.0" encoding="utf-8"?>
<skin>
  <info>
    <name>Odyssey Custom</name>
    <author>Ongdalsaem</author>
    <version>1.0.2</version>
    <description>Custom Odyssey skin with header, join button, PC1 drawer memory, PC2 accordion (instant-close), and optimized ad layout.</description>
  </info>
  <variables>
    <variablegroup name="내비게이션">
      <variable>
        <name>topnav</name>
        <label>내비게이션</label>
        <type>SELECT</type>
        <option>
          [
            {"name":"topnavnone","label":"사용 안 함","value":"topnavnone"},
            {"name":"topnavmenu","label":"티스토리 메뉴 활용","value":"topnavmenu"}
          ]
        </option>
        <default>topnavnone</default>
      </variable>
    </variablegroup>
    <variablegroup name="사이드바 타입">
      <variable>
        <name>sidebartype</name>
        <label>사이드바</label>
        <type>SELECT</type>
        <option>
          [
            {"name":"right","label":"우측 고정 2단(PC2)","value":"right"},
            {"name":"drawer","label":"오프캔버스 서랍형(PC1)","value":"drawer"}
          ]
        </option>
        <default>right</default>
      </variable>
    </variablegroup>
  </variables>
  <files>
    <file>skin.html</file>
    <file>style.css</file>
  </files>
</skin>
