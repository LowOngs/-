<?xml version="1.0" encoding="UTF-8"?>
<skin>
  <!-- =========================================================
       Odyssey Custom Skin
       Base: v1.2 (source of truth)  →  This file: v1.2.2 (add-only)
       Policy: keep all owner-defined variables & texts (NO DELETE)
       ========================================================= -->

  <info>
    <name>옹달샘 지식 아카이브</name>
    <author>LowOngs</author>
    <version>1.2.2</version>
    <description>지식과 커머스가 공존하는 곳</description>
  </info>

  <!-- 사용자가 의도적으로 설정한 변수(삭제 금지) -->
  <variables>
    <!-- v1.2에서 유지되던 푸터 고지 3종 (복구/보존) -->
    <variable name="disclosure_text" label="제휴 고지 문구" type="text"
              default="제휴링크 이용은 모두 무료입니다. 일부 링크 이용 시 운영자는 제휴사로부터 소정의 수수료를 받습니다."/>
    <variable name="copyright_text" label="카피라이트 문구" type="text"
              default="© 2025 옹달샘 지식 아카이브 · Where Knowledge and Commerce Coexist"/>
    <variable name="kakao_notice_text" label="카카오 기본 제공 문구" type="text"
              default="Kakao 기본 제공 문구"/>

    <!-- (참고) 여기 아래로 v1.2에 존재하던 나머지 사용자 변수들이 있다면
         동일 키/라벨/기본값으로 그대로 보존하여 추가하세요. -->
  </variables>

  <files>
    <file type="html" name="skin.html"/>
    <file type="css"  name="style.css"/>
  </files>

  <!-- 이미지 매핑: 파일명은 저장소와 1:1 동일(ASCII 통일) -->
  <images>
    <!-- PC2 긴버튼 2.5:1 (12개) -->
    <image name="btn_pc2_01_coupang.png"/>
    <image name="btn_pc2_02_gmarket.png"/>
    <image name="btn_pc2_03_11st.png"/>
    <image name="btn_pc2_04_musinsa.png"/>
    <image name="btn_pc2_05_amazon.png"/>
    <image name="btn_pc2_06_ebay.png"/>
    <image name="btn_pc2_07_aliexpress.png"/>
    <image name="btn_pc2_08_otto.png"/>
    <image name="btn_pc2_09_allegro.png"/>
    <image name="btn_pc2_10_lazada.png"/>
    <image name="btn_pc2_11_shopee.png"/>
    <image name="btn_pc2_12_auction.png"/>

    <!-- PC1 정사각 1:1 (12개) -->
    <image name="btn_pc1_01_coupang.png"/>
    <image name="btn_pc1_02_gmarket.png"/>
    <image name="btn_pc1_03_11st.png"/>
    <image name="btn_pc1_04_musinsa.png"/>
    <image name="btn_pc1_05_amazon.png"/>
    <image name="btn_pc1_06_ebay.png"/>
    <image name="btn_pc1_07_aliexpress.png"/>
    <image name="btn_pc1_08_otto.png"/>
    <image name="btn_pc1_09_allegro.png"/>
    <image name="btn_pc1_10_lazada.png"/>
    <image name="btn_pc1_11_shopee.png"/>
    <image name="btn_pc1_12_auction.png"/>

    <!-- 공용 아이콘/로고 -->
    <image name="icon_pc1_category_rabbit.png"/>
    <image name="icon_pc1_sidebar_rabbit.png"/>
    <image name="icon_pc2_category_rabbit.png"/>
    <image name="header_logo_pc2_main.png"/>
    <image name="icon_translate_rabbit.png"/>

    <!-- 파비콘/앱아이콘 (저장소 파일명 기준) -->
    <image name="favicon_rabbit.png"/>
    <image name="icon-192.png"/>

    <!-- 필요 시(선택) 추가 등록: apple-touch-icon 등
         <image name="apple-touch-icon.png"/> -->
  </images>

  <!-- 기본 레이아웃(티스토리 요구 스키마 준수) -->
  <default>
    <layout>list</layout>
  </default>

  <!-- v1.2.2 add-only 변경 메모(설명용, 동작 영향 없음)
       - Zero-Content Safe: 글 0개에서도 헤더/사이드/푸터 스켈레톤 노출
       - 미리보기 더미/샘플 항목 제거(충돌 방지), 실제 리소스만 매핑
       - 절대경로 의존 제거, 상대경로 일관화
       - 이미지 파일명 ASCII 통일(한글 파일명 제거)
       - 파비콘·아이콘 누락 방지 등록 추가 -->
</skin>
