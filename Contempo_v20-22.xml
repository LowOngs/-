<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html>
<html b:css='false' b:defaultwidgetversion='2' b:layoutsVersion='3' b:responsive='true' b:templateUrl='indie.xml' b:version='2.0'>
  <head>
    <b:include data='blog' name='all-head-content'/>
    <b:skin><![CDATA[

/* --- OGX Partners strip --- */
.ogx-partners{display:flex;gap:12px;overflow-x:auto;padding:8px 12px;scroll-snap-type:x mandatory}
.ogx-partners a{flex:0 0 auto;scroll-snap-align:center;border:1px solid rgba(0,0,0,.1);border-radius:12px;padding:8px 12px;white-space:nowrap;text-decoration:none}
.ogx-partners a[aria-disabled="true"]{opacity:.45;pointer-events:none}

/* Sidebar admin gadget */
.pill-button{display:inline-block;padding:6px 12px;background:#222;color:#fff;border-radius:20px;text-decoration:none;font-size:.8rem}
.pill-button:hover{background:#000}

    ]]></b:skin>
  </head>
  <body>
    <b:section class='header' id='header' showaddelement='no'>
      <b:widget id='Header1' type='Header' visible='true' locked='true'/>
    </b:section>

    <b:section class='main' id='main' showaddelement='no'>
      <b:widget id='Blog1' type='Blog' visible='true'/>
    </b:section>

    <b:section class='sidebar' id='sidebar' showaddelement='yes'>
      <b:widget id='Profile1' type='Profile' visible='true'/>
      <b:widget id='BlogArchive1' type='BlogArchive' visible='true'/>
      <b:widget id='Label1' type='Label' visible='true'/>
    </b:section>

    <b:section class='sidebar_bottom' id='sidebar_bottom' showaddelement='yes'>
      <b:widget id='HTML_AdminOps' locked='false' title='Operator tools' type='HTML' visible='false'>
        <b:includable id='main'>
          <div class='widget-content'>
            <a class='pill-button' expr:href='data:skin.vars.partner_webapp ?: "#"' target='_blank' rel='noopener'>제휴정보관리 / 집계</a>
            <p style="font-size:.75rem;color:#777;margin-top:.5rem">Set this gadget to <em>Shown</em> in Layout only when you need it. Keep hidden otherwise.</p>
          </div>
        </b:includable>
      </b:widget>
    </b:section>

    <b:section class='footer' id='footer' showaddelement='yes'>
      <b:widget id='HTML_Partners' locked='false' title='Affiliates' type='HTML' visible='true'>
        <b:includable id='main'>
          <div class='widget-content'>
            <div class='ogx-partners' role='navigation' aria-label='Affiliate partners'>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner1_url != "" ? data:skin.vars.partner_webapp + "?pid=1" : "#")' expr:aria-disabled='(data:skin.vars.partner1_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 1</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner2_url != "" ? data:skin.vars.partner_webapp + "?pid=2" : "#")' expr:aria-disabled='(data:skin.vars.partner2_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 2</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner3_url != "" ? data:skin.vars.partner_webapp + "?pid=3" : "#")' expr:aria-disabled='(data:skin.vars.partner3_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 3</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner4_url != "" ? data:skin.vars.partner_webapp + "?pid=4" : "#")' expr:aria-disabled='(data:skin.vars.partner4_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 4</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner5_url != "" ? data:skin.vars.partner_webapp + "?pid=5" : "#")' expr:aria-disabled='(data:skin.vars.partner5_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 5</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner6_url != "" ? data:skin.vars.partner_webapp + "?pid=6" : "#")' expr:aria-disabled='(data:skin.vars.partner6_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 6</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner7_url != "" ? data:skin.vars.partner_webapp + "?pid=7" : "#")' expr:aria-disabled='(data:skin.vars.partner7_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 7</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner8_url != "" ? data:skin.vars.partner_webapp + "?pid=8" : "#")' expr:aria-disabled='(data:skin.vars.partner8_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 8</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner9_url != "" ? data:skin.vars.partner_webapp + "?pid=9" : "#")' expr:aria-disabled='(data:skin.vars.partner9_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 9</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner10_url != "" ? data:skin.vars.partner_webapp + "?pid=10" : "#")' expr:aria-disabled='(data:skin.vars.partner10_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 10</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner11_url != "" ? data:skin.vars.partner_webapp + "?pid=11" : "#")' expr:aria-disabled='(data:skin.vars.partner11_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 11</a>
              <a class='partner-btn' expr:href='(data:skin.vars.partner_webapp != "" and data:skin.vars.partner12_url != "" ? data:skin.vars.partner_webapp + "?pid=12" : "#")' expr:aria-disabled='(data:skin.vars.partner12_url == "") ? "true" : "false"' target='_blank' rel='nofollow'>Partner 12</a>
            </div>
            <p style="text-align:center;margin:.5rem 0 0 0;font-size:.8rem;color:#555">
              Affiliate use is free. For certain affiliate programs, the operator receives a commission from the affiliate.
            </p>
          </div>
        </b:includable>
      </b:widget>
    </b:section>

  </body>
</html>
