# Cloudflare R2 (S3 호환)
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxx
R2_ACCESS_KEY_ID=XXXXXXXXXXXXXXXXXXXX
R2_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
R2_BUCKET=ongs-blog-images
# 지역형 엔드포인트 (account-id + r2.cloudflarestorage.com)
R2_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxx.r2.cloudflarestorage.com

# 공개 URL 프리픽스(Cloudflare 대체 도메인 or 커스텀 도메인)
CDN_BASE=https://cdn.ongsblog.com/images

# 로컬 이미지 소스 폴더 (업로드 대상)
IMAGES_DIR=assets/images

# 게시글 원천 JSON 폴더 (rewrite 대상)
POSTS_DIR=content/posts
